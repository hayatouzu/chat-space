.message
  .upper-info
    %p.upper-info__user
      = message.user.name
    %p.upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__text
    - if message.content.present?
      %p 
        = message.content
    = image_tag message.image.url, class: 'lower-message' if message.image.present?
